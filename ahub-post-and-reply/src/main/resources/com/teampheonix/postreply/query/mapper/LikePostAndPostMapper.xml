<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teampheonix.postreply.query.mapper.LikePostAndPostMapper">

    <resultMap id="likePostAndPostResultMap" type="com.teampheonix.postreply.query.dto.LikePostAndPost">
        <id property="likeId" column="like_id"/>
        <result property="likeDate" column="like_date"/>
        <result property="likeCancelDate" column="like_cancel_date"/>
        <result property="likeState" column="like_state"/>
        <result property="postId" column="post_id"/>
        <collection property="posts" ofType="com.teampheonix.postreply.query.dto.Post">
            <id property="postId" column="post_id"/>
            <result property="postTitle" column="post_title"/>
            <result property="postContent" column="post_content"/>
            <result property="postDate" column="post_date"/>
            <result property="categoryId" column="category_id"/>
            <result property="likeAmount" column="like_amount"/>
            <result property="memberCode" column="member_code"/>
            <result property="postModifyDate" column="post_modify_date"/>
        </collection>
    </resultMap>

    <select id="selectPostsByLikdId" resultMap="likePostAndPostResultMap" parameterType="int">
        SELECT
                 a.like_id,
                 a.like_date,
                 a.like_cancel_date,
                 a.like_state,
                 a.post_id,
                 b.post_title,
                 b.post_content,
                 b.post_date,
                 b.category_id,
                 b.like_amount,
                 b.member_code,
                 b.post_modify_date
          FROM liked_post a
          JOIN post b ON a.post_id = b.post_id
         WHERE a.like_id = #{likeId}
    </select>
</mapper>
